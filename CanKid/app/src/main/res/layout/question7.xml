<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="2">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/home"
            android:id="@+id/homeIcon"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/arrow"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="8dp"
            android:id="@+id/question7_next"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="4"
        android:layout_weight="0.78">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/goat"
            android:id="@+id/goat_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/purple"
            android:id="@+id/purple_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/seven"
            android:id="@+id/seven_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-30dp"/>
        <ImageView
            app:srcCompat="@drawable/loudspeaker"
            android:id="@+id/question7Sound"
            android:layout_marginLeft="275dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </LinearLayout>
</LinearLayout>