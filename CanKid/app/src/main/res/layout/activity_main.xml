<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5px"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="ba.edu.ibu.cankid.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <Button
            android:text="Close"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/button_close"
            android:width="30px"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorBlack"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"

/>

        <Button
            android:text="@string/colors_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_colors"
            android:minWidth="500px"
            android:height="80px"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom = "10dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:text="@string/animals_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_animals"
            android:minWidth="500px"
            android:height="80px"
            android:background="@android:color/holo_orange_light"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom = "10dp" />

        <Button
            android:text="@string/numbers_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_numbers"
            android:minWidth="500px"
            android:height="80px"
            android:background="@android:color/holo_red_light"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom = "10dp"
            />

        <Button
            android:text="@string/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_play"
            android:minWidth="500px"
            android:height="80px"
            android:background="@android:color/holo_green_light"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom = "10dp"
             />


    </LinearLayout>


</RelativeLayout>
