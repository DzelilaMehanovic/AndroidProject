<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5px"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="ba.edu.ibu.cankid.MainActivity">

    <Button
        android:text="@string/animals_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_animals"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/button_colors"
        android:layout_alignBottom="@+id/button_colors"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:text="@string/numbers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_numbers"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_red_light"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/button_colors"
        android:layout_alignStart="@+id/button_colors"
        android:layout_marginBottom="66dp" />

    <Button
        android:text="@string/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_play"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_green_light"
        android:layout_alignBaseline="@+id/button_numbers"
        android:layout_alignBottom="@+id/button_numbers"
        android:layout_alignLeft="@+id/button_animals"
        android:layout_alignStart="@+id/button_animals" />

    <Button
        android:text="@string/colors_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_colors"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:layout_above="@+id/button_numbers"
        android:layout_toLeftOf="@+id/button_animals"
        android:layout_toStartOf="@+id/button_animals"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginBottom="69dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
