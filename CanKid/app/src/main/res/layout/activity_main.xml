<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5px"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ba.edu.ibu.cankid.MainActivity">

    <Button
        android:text="@string/colors_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/button_colors"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_blue_dark"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp" />

    <Button
        android:text="@string/animals_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_animals"
        android:layout_marginLeft="150dp"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/button_colors"
        android:layout_alignBottom="@+id/button_colors"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/numbers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_numbers"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_red_light"
        android:layout_below="@+id/button_colors"
        android:layout_alignLeft="@+id/button_colors"
        android:layout_alignStart="@+id/button_colors"
        android:layout_marginTop="97dp" />

    <Button
        android:text="@string/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_play"
        android:minWidth="300px"
        android:height="150px"
        android:background="@android:color/holo_green_light"
        android:layout_alignBaseline="@+id/button_numbers"
        android:layout_alignBottom="@+id/button_numbers"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
